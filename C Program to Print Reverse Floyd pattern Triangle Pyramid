#include <stdio.h>

int main() {
    int n, count = 1;
    scanf("%d", &n);

    for (int i = 1; i <= n; i++)
        count += i;

    count--; 

    int current = count;

    for (int i = 1; i <= n; i++) {
        int temp = current;
        for (int j = 1; j <= i; j++) {
            printf("%d ", temp);
            temp--;
        }
        current -= i;
        printf("\n");
    }

    return 0;
}
