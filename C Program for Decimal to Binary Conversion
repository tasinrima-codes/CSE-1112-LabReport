#include <stdio.h>

int main() {
    int n, i;
    int bin[32];
    printf("Enter a decimal number: ");
    scanf("%d", &n);

    for(i = 0; n > 0; i++) {
        bin[i] = n % 2;
        n /= 2;
    }

    printf("Binary: ");
    for(i = i-1; i >= 0; i--)
        printf("%d", bin[i]);
    return 0;
}
