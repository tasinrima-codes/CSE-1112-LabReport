#include <stdio.h>

struct Student {
    char name[50];
    int age;
    float marks;
};

int main() {
    struct Student s = {"Rima", 18, 95.5}, s2;
    FILE *f = fopen("student.txt", "w");
    fwrite(&s, sizeof(s), 1, f);
    fclose(f);
    f = fopen("student.txt", "r");
    fread(&s2, sizeof(s2), 1, f);
    fclose(f);
    printf("Name: %s\nAge: %d\nMarks: %.2f\n", s2.name, s2.age, s2.marks);
    return 0;
}
