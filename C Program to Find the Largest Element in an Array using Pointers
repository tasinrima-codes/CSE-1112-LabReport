#include <stdio.h>

int main() {
    int arr[100], n, *p, i, max;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    p = arr;

    for (i = 0; i < n; i++)
        scanf("%d", p + i);

    max = *p;
    for (i = 1; i < n; i++)
        if (*(p + i) > max) max = *(p + i);

    printf("Largest element: %d", max);
    return 0;
}
