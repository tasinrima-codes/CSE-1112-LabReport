#include <stdio.h>

int main() {
    int n;
    printf("Enter size: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter elements:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    float sum = 0;
    for (int i = 0; i < n; i++)
        sum += arr[i];

    printf("Average = %.2f\n", sum / n);
    return 0;
}
