#include <stdio.h>
#include <string.h>

void reverse(char str[], int index, int len) {
    if (index == len) return;
    reverse(str, index + 1, len);
    printf("%c", str[index]);
}

int main() {
    char str[100];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = 0;

    reverse(str, 0, strlen(str));
    return 0;
}
