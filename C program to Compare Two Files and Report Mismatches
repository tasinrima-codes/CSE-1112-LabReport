#include <stdio.h>

int main() {
    FILE *f1 = fopen("file1.txt", "r");
    FILE *f2 = fopen("file2.txt", "r");
    char ch1, ch2;
    int pos = 0, mismatch = 0;

    while ((ch1 = fgetc(f1)) != EOF && (ch2 = fgetc(f2)) != EOF) {
        pos++;
        if (ch1 != ch2) {
            printf("Mismatch at position %d: %c != %c\n", pos, ch1, ch2);
            mismatch++;
        }
    }
    if (mismatch == 0) printf("Files are identical\n");
    fclose(f1); fclose(f2);
    return 0;
}
