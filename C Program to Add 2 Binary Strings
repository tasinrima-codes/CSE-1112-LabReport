#include <stdio.h>
#include <string.h>

int main() {
    char a[100], b[100], result[101];
    int i, j, k = 0, carry = 0, sum;

    printf("Enter first binary: ");
    fgets(a, sizeof(a), stdin);
    a[strcspn(a, "\n")] = 0;

    printf("Enter second binary: ");
    fgets(b, sizeof(b), stdin);
    b[strcspn(b, "\n")] = 0;

    i = strlen(a) - 1;
    j = strlen(b) - 1;

    while (i >= 0 || j >= 0 || carry) {
        sum = carry;
        if (i >= 0) sum += a[i--] - '0';
        if (j >= 0) sum += b[j--] - '0';
        result[k++] = (sum % 2) + '0';
        carry = sum / 2;
    }
    result[k] = '\0';

    for (i = 0, j = k - 1; i < j; i++, j--) {
        char temp = result[i];
        result[i] = result[j];
        result[j] = temp;
    }

    printf("Sum = %s", result);
    return 0;
}
