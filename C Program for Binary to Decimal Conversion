#include <stdio.h>
#include <string.h>
#include <math.h>

int main() {
    char bin[50];
    int i, len, dec = 0;
    printf("Enter a binary number: ");
    scanf("%s", bin);
    len = strlen(bin);

    for(i = 0; i < len; i++) {
        if(bin[i] == '1')
            dec += pow(2, len-i-1);
    }

    printf("Decimal: %d", dec);
    return 0;
}
